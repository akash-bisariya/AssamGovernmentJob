<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/s_image_60dp"
        android:layout_height="60dp"
        android:padding="@dimen/s_10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/iv_image"/>

    <TextView
        android:id="@+id/tv_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/s_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_image"
        app:layout_constraintStart_toEndOf="@+id/iv_image" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_date_range_grey_600_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="@dimen/s_5dp"
        app:layout_constraintLeft_toRightOf="@id/iv_image"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@id/tv_url"/>

</android.support.constraint.ConstraintLayout>
